{
  "name": "@thaparoyal/image-compression",
  "version": "1.2.15",
  "description": "Browser image compression library for JavaScript and TypeScript.",
  
  "main": "dist/image-compression.cjs.js",       
  "module": "dist/image-compression.esm.js",     
  "browser": "dist/image-compression.umd.js",    
  "types": "dist/index.d.ts",                     

  "exports": {
    ".": {
      "import": "./dist/image-compression.esm.js",
      "require": "./dist/image-compression.cjs.js",
      "browser": "./dist/image-compression.umd.js",
      "types": "./dist/index.d.ts"
    }
  },

  "scripts": {
    "clean": "rm -rf dist",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:bundle": "rollup -c",
    "build": "npm run clean && npm run build:types && npm run build:bundle",
    "test": "jest"
  },

  "dependencies": {
    "tslib": "^2.8.1"
  },

  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^29.0.0",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.9.2"
  },

  "keywords": [
    "image",
    "compression",
    "webp",
    "jpeg",
    "png",
    "avif",
    "browser",
    "cdn",
    "typescript"
  ],

  "author": "Thapa Royal",
  "license": "MIT",

  "unpkg": "dist/image-compression.umd.js",
  "jsdelivr": "dist/image-compression.umd.js",

  "repository": {
    "type": "git",
    "url": "https://github.com/thapaRoyal/ImageCompression.git"
  },

  "bugs": {
    "url": "https://github.com/thaparoyal/image-compression/issues"
  },

  "homepage": "https://github.com/thapaRoyal/ImageCompression#readme"
}

{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",                 // Rollup expects ESM input
    "moduleResolution": "Node",         // simpler + works with Rollup
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,        // âœ… only generate .d.ts
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
